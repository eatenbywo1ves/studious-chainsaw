# Catalytic Computing System Configuration
# Copy this file to .env and update values as needed

# === Environment ===
CATALYTIC_ENVIRONMENT=development
CATALYTIC_DEBUG=true

# === Lattice Configuration ===
LATTICE_MIN_DIMENSIONS=1
LATTICE_MAX_DIMENSIONS=10
LATTICE_DEFAULT_DIMENSIONS=4
LATTICE_MAX_LATTICE_SIZE=100
LATTICE_DEFAULT_AUX_MEMORY_MB=10.0
LATTICE_PARALLEL_CORES=12
LATTICE_ENABLE_CACHING=true

# === GPU Configuration ===
GPU_PREFERRED_BACKEND=cuda
GPU_CUDA_DEVICE_ID=0
GPU_MAX_THREADS_PER_BLOCK=256
GPU_MAX_GPU_MEMORY_MB=8192
GPU_MEMORY_SAFETY_MARGIN=0.9
GPU_AUTO_SELECT_DEVICE=true

# === API Server Configuration ===
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_MAX_LATTICES=100
API_CACHE_ENABLED=true
API_CACHE_SIZE=1024
API_ENABLE_METRICS=true
API_ENABLE_RATE_LIMITING=true
API_RATE_LIMIT_PER_MINUTE=60

# === Webhook Configuration ===
WEBHOOK_ENABLED=true
WEBHOOK_PORT=8085
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60
WEBHOOK_REQUIRE_SIGNATURE=true

# === Storage Configuration ===
STORAGE_BACKEND=memory
STORAGE_MEMORY_MAX_ENTRIES=1000
# STORAGE_REDIS_URL=redis://localhost:6379
# STORAGE_POSTGRES_URL=postgresql://user:pass@localhost/catalytic

# === Monitoring Configuration ===
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=json
MONITORING_ENABLE_METRICS=true
MONITORING_ENABLE_TRACING=false