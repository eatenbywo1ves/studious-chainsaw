# Catalytic Computing SaaS - Environment Configuration Template
# Copy this file to .env and fill in the values

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Configuration
JWT_PRIVATE_KEY_PATH=/path/to/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/path/to/jwt_public.pem
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Encryption
API_ENCRYPTION_KEY_PATH=/path/to/api_encryption.key

# Database Encryption
DB_ENCRYPTION_KEY_PATH=/path/to/db_encryption.key

# Security Level (basic, enhanced, strict)
SECURITY_LEVEL=enhanced

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# DDoS Protection
DDOS_PROTECTION_ENABLED=true
DDOS_BLOCK_DURATION_MINUTES=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# CSRF Protection
CSRF_ENABLED=true
CSRF_SECRET_KEY=your-csrf-secret-key-here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/catalytic_saas

# SQLite (development - no PostgreSQL required)
DATABASE_URL=sqlite:///path/to/catalytic_saas.db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================

# Test Mode Keys
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Production Keys (uncomment when ready)
# STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_SECRET_KEY
# STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_PUBLISHABLE_KEY
# STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Choose ONE email provider:

# Option 1: SendGrid
SENDGRID_API_KEY=SG.YOUR_API_KEY_HERE
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Company Name

# Option 2: AWS SES
# AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_SECRET_KEY
# AWS_REGION=us-east-1
# EMAIL_FROM=noreply@yourdomain.com
# EMAIL_FROM_NAME=Your Company Name

# Option 3: SMTP (Fallback)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com
# EMAIL_FROM_NAME=Your Company Name

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

APP_NAME=Catalytic Computing SaaS
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ============================================================================
# OPTIONAL: DEMO TENANT
# ============================================================================

# Set to 'true' to create demo tenant during database initialization
CREATE_DEMO_TENANT=false

# ============================================================================
# OPTIONAL: MONITORING
# ============================================================================

# Sentry (Error Tracking)
# SENTRY_DSN=https://your-sentry-dsn-here

# New Relic (APM)
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Grafana
# GRAFANA_URL=http://localhost:3030
# GRAFANA_API_KEY=your-grafana-api-key-here

# Prometheus
# PROMETHEUS_URL=http://localhost:9090
