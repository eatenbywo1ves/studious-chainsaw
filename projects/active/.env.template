# Security Configuration
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
API_KEY_SECRET=your-api-key-secret-here-minimum-32-characters
ENCRYPTION_KEY=your-encryption-key-here-optional

# TLS Configuration (Production)
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/private.key
REQUIRE_HTTPS=false

# Gateway Configuration
GATEWAY_PORT=9000
GATEWAY_HOST=localhost
CORS_ENABLED=true
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=20
ENUMERATION_LIMIT=10

# Circuit Breaker
CB_FAILURE_THRESHOLD=5
CB_TIMEOUT=60
CB_RECOVERY_TIMEOUT=30

# Database Configuration
# For SQLite (default)
DATA_DIR=/data
OBSERVATORY_DB_TYPE=sqlite
OBSERVATORY_DB_PATH=/data/observatory.db

# For PostgreSQL (alternative)
# OBSERVATORY_DB_TYPE=postgresql
# OBSERVATORY_DB_HOST=localhost
# OBSERVATORY_DB_PORT=5432
# OBSERVATORY_DB_USER=user
# OBSERVATORY_DB_PASSWORD=password
# OBSERVATORY_DB_NAME=observatory

# Redis Configuration
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=6379
REDIS_CACHE_PASSWORD=
REDIS_CACHE_DB=0
REDIS_CACHE_MAX_CONN=10

REDIS_PUBSUB_HOST=localhost
REDIS_PUBSUB_PORT=6379
REDIS_PUBSUB_PASSWORD=
REDIS_PUBSUB_DB=1
REDIS_PUBSUB_MAX_CONN=20

REDIS_SESSIONS_HOST=localhost
REDIS_SESSIONS_PORT=6379
REDIS_SESSIONS_PASSWORD=
REDIS_SESSIONS_DB=2
REDIS_SESSIONS_MAX_CONN=5

# Service Ports
FINANCIAL_STOCHASTIC_PORT=3001
FINANCIAL_LOCALIZATION_PORT=3002
MULTIDIMENSIONAL_STOCHASTIC_PORT=3003
RANDOM_WALK_PORT=3004
DIRECTOR_PORT=8000
OBSERVATORY_PORT=8080
VON_NEUMANN_PORT=8001

# Logging
LOGS_DIR=/logs
LOG_LEVEL=INFO
LOG_SENSITIVE_DATA=false

# Security Settings
MAX_REQUEST_SIZE=1048576
REQUEST_TIMEOUT=30

# Development vs Production
ENVIRONMENT=development