{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Schema",
  "description": "Schema for agent configuration and registration",
  "type": "object",
  "properties": {
    "agent_id": {
      "type": "string",
      "description": "Unique identifier for the agent"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the agent"
    },
    "description": {
      "type": "string",
      "description": "Brief description of agent functionality"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the agent"
    },
    "type": {
      "type": "string",
      "enum": ["coordination", "monitoring", "autonomous", "utility", "processing"],
      "description": "Type of agent"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "experimental", "deprecated"],
      "description": "Current status of the agent"
    },
    "path": {
      "type": "string",
      "description": "File system path to agent directory"
    },
    "main": {
      "type": "string",
      "description": "Main executable file"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of agent capabilities"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of required dependencies"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "parameters": {
          "type": "object",
          "description": "Configuration parameters"
        },
        "environment": {
          "type": "object",
          "description": "Environment variables"
        },
        "resources": {
          "type": "object",
          "properties": {
            "cpu_limit": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "memory_limit": {
              "type": "string",
              "pattern": "^\\d+[KMG]B$"
            },
            "timeout": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "health_check_interval": {
          "type": "number",
          "minimum": 1,
          "description": "Health check interval in seconds"
        },
        "metrics_collection": {
          "type": "boolean",
          "description": "Enable metrics collection"
        },
        "log_level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "description": "Logging level"
        }
      }
    },
    "communication": {
      "type": "object",
      "properties": {
        "protocols": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["http", "websocket", "tcp", "udp", "redis", "rabbitmq"]
          }
        },
        "endpoints": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9_]*$": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri"
                },
                "method": {
                  "type": "string",
                  "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
                },
                "authentication": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["none", "basic", "bearer", "api_key"]
                    },
                    "credentials": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "agent_id",
    "name",
    "description",
    "type",
    "status",
    "path",
    "main"
  ],
  "additionalProperties": false
}