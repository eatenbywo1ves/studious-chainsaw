{
  "name": "projects-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for multi-agent systems and financial applications",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "agents/*",
    "financial-apps/*",
    "mcp-servers/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:ts": "tsc --build",
    "build:ts:clean": "tsc --build --clean",
    "build:parallel": "node scripts/build-all.js",
    "test": "jest",
    "dev": "npm run dev --workspaces --if-present",
    "dev:parallel": "node scripts/run-parallel.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "clean": "npm run clean --workspaces --if-present",
    "install:all": "npm install",
    "start:agents": "docker-compose up -d",
    "stop:agents": "docker-compose down",
    "start:all": "concurrently \"npm:start:agents\" \"npm:dev:parallel\"",
    "status": "npm list --workspaces --depth=0",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "check": "npm run lint && npm run typecheck && npm run test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:packages": "jest --selectProjects packages",
    "test:mcp-servers": "jest --selectProjects mcp-servers",
    "test:financial-apps": "jest --selectProjects financial-apps",
    "test:agents": "jest --selectProjects agents",
    "test:workspaces": "npm run test --workspaces --if-present",
    "build:optimized": "node scripts/build-optimized.js",
    "build:turbo": "turbo run build",
    "build:clean": "turbo run clean && npm run build:ts:clean",
    "build:fast": "node scripts/build-fast.js",
    "docs:build": "typedoc",
    "docs:serve": "npx http-server docs/api -p 3001 -o",
    "docs:clean": "rm -rf docs/api/*",
    "docs:watch": "typedoc --watch"
  },
  "dependencies": {
    "mathjs": "^12.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.36.0",
    "@jest/types": "^30.0.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.5.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^15.5.2",
    "ts-jest": "^29.4.4",
    "turbo": "^2.5.6",
    "typedoc": "^0.26.10",
    "@typedoc/plugin-pages": "^0.1.1",
    "typedoc-plugin-mermaid": "^1.11.0",
    "http-server": "^14.1.1",
    "typescript": "^5.0.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "echo 'Commit hooks active'"
    }
  },
  "packageManager": "npm@10.0.0"
}
